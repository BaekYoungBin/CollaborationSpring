<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.grouping.common.mapper.LoginMapper">
	<select id="confirmUserIdDuplicate" parameterType="String" resultType="String">
		select * from user where user_id = #{param1}
	</select>

	<select id="userLogin" parameterType="com.spring.grouping.user.domain.UserVO" resultType="String">
		select USER_NAME from T_USER_INFO where USER_ID = #{user_id} and USER_PWD = #{user_pwd}
	</select>
	<insert id="userInsert" parameterType="com.spring.grouping.user.domain.UserVO">		
			insert into T_USER_INFO (USER_ID, USER_PWD, USER_NAME,
		USER_EMAIL) values(#{user_id}, #{user_pwd}, #{user_name},
		#{user_email})	
	</insert>
	<select id ="passwordFind" parameterType ="String" resultType="com.spring.grouping.user.domain.UserVO">
	SELECT *
	FROM T_USER_INFO
	WHERE
	USER_EMAIL = #{user_email}
	</select>
</mapper>
