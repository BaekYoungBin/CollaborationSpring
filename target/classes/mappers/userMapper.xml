<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.grouping.user.mapper.UserMapper">
	
	<update id="updateUserInfo" parameterType="com.spring.grouping.user.domain.UserVO">
		UPDATE T_USER_INFO
		SET
		USER_PWD = #{user_pwd}
		, USER_NAME = #{user_name}
		, USER_EMAIL = #{user_email}
		, UDT_DT = CURRENT_TIMESTAMP	
		, UDT_USER_ID = #{user_id}
		WHERE 
		USER_ID = #{user_id}
	</update>
	
	<select id ="selectUserInfo" resultType="com.spring.grouping.user.domain.UserVO">
	SELECT *
	from T_USER_INFO
	WHERE USER_ID = #{user_id}
	</select>

	
</mapper>
